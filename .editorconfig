# Top-most EditorConfig file
root = true

# Define coding styles for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Define coding styles for specific file types
[*.js]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
